<Window x:Class="PizzaApp.WorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp"
        mc:Ignorable="d"
        Title="WorkerWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" HorizontalAlignment="Right">
            <Button Margin="10" Content="Табло" Width="100" Name="DisplayTb" Click="DisplayTb_Click"/>
        </DockPanel>
        
        <DockPanel Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Width="400" MaxHeight="700">
                <ItemsControl Name ="OrdersControl" ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border Background="White" CornerRadius="10" Padding="15" Margin="10" BorderBrush="LightBlue" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    
                                    <TextBlock Text="{Binding Id, StringFormat= Заказ № {0}}" FontSize="18" Grid.Row="0"/>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="10"/>
                                    
                                    
                                        <ItemsControl ItemsSource="{Binding ProductsOrder}" Margin="10" Grid.Row="2">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontSize="14"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    
                                    
                                    <ComboBox Grid.Row="3" SelectionChanged="StatusChanged" ItemsSource="{Binding Statuses}" SelectedItem="{Binding SelectedStatus, Mode=TwoWay}" DisplayMemberPath="Name" Margin="10"/>
                                    
                                    
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
        <DockPanel Grid.Row="2">
            <Button Name="CreateBt" Content="Создать заказ" Width="100" Click="CreateBt_Click"/>
        </DockPanel>
    </Grid>
</Window>
